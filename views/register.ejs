<!-- Mask & flexbox options-->
<div class="mask rgba-black-light d-flex justify-content-center align-items-center">
  <!-- Content -->
  <div class="container">
    <!--Grid row-->
    <div class="row wow fadeIn animated"
      style="visibility: visible; animation-name: fadeIn; animation-iteration-count: 1;">
      <!--Grid column-->
      <div class="col-md-6 mb-4 white-text text-center text-md-left">
        <div class="text-nowrap d-flex justify-content-center">
          <img src="img/logonotext.png" alt="logo" width="100">
          <span class="display-4 font-weight-bold ml-3 mb-0 pt-3 align-bottom">RemindMe</span>
        </div>
        <hr class="hr-light">
        <p class="text-center">
          <strong>Set your personal reminders to make your life easier by signing up here.</strong>
        </p>
      </div>
      <!--Grid column-->
      <!--Grid column-->
      <div class="col-md-6 col-xl-5 mb-4">
        <!--Card-->
        <div class="card">
          <!--Card content-->
          <div class="card-body">
            <!-- Form -->
            <form action="/register" method="POST">
              <!-- Heading -->
              <h3 class="dark-grey-text text-center">
                <strong>Sign up</strong>
              </h3>
              <hr>
              <div class="md-form">
                <i class="fas fa-envelope prefix grey-text active"></i>
                <input type="text" name="first_name" placeholder="First name" class="form-control">
              </div>
              <div class="md-form">
                <i class="fas fa-key prefix grey-text active"></i>
                <input type="text" name="last_name" placeholder="Last name" class="form-control">
              </div>
              <div class="md-form">
                <i class="fas fa-key prefix grey-text active"></i>
                <input type="text" name="email" placeholder="E-Mail" class="form-control">
              </div>
              <div class="md-form">
                <i class="fas fa-key prefix grey-text active"></i>
                <input type="password" name="password" placeholder="Password" class="form-control">
              </div>
              <div class="md-form">
                <i class="fas fa-key prefix grey-text active"></i>
                <input type="password" name="password_repeat" placeholder="Repeat password" class="form-control">
              </div>
              <div class="text-center">
                <span class="waves-input-wrapper waves-effect waves-light"><input type="submit"
                    class="btn btn-custom-color" value="Register"></span>
              </div>
            </form>
            <!-- Form -->
            <hr>
            <div class="text-center">Already have an account? <br>
              <a href="/login" style="color:#A91010" class="font-weight-bold">Sign in</a>
            </div>
          </div>
        </div>
        <!--/.Card-->
      </div>
      <!--Grid column-->
    </div>
    <!--Grid row-->
  </div>
  <!-- Content -->
</div>
<!-- Mask & flexbox options-->